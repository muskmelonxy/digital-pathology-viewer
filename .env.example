# 通用配置
SECRET_KEY=change-me
FLASK_DEBUG=0

# PostgreSQL 数据库
POSTGRES_USER=slides_user
POSTGRES_PASSWORD=slides_pass
POSTGRES_DB=slides_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# SQLAlchemy 连接串（Flask 后端使用）
DATABASE_URL=postgresql+psycopg2://slides_user:slides_pass@postgres:5432/slides_db

# 切片文件存储路径（容器内挂载）
SLIDE_STORAGE_PATH=/data/slides

# 前端访问后端的基础 URL（生产环境建议填写实际域名）
REACT_APP_API_BASE_URL=/api

# CORS 允许的域名（多个域名以逗号分隔）
ALLOWED_ORIGINS=http://localhost,http://127.0.0.1
